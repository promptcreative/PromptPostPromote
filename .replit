modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[deployment]
run = ["gunicorn", "--bind=0.0.0.0:5000", "--reuse-port", "app:app"]
deploymentTarget = "gce"
ignorePorts = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45137
externalPort = 3000

[agent]
expertMode = true
